{
  "name": "issue-tracker-backend",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "db:logs": "docker-compose logs -f db",
    "db:reset": "docker-compose down -v && docker-compose up -d",
    "db:migrate": "docker exec -i issue-tracker-db psql -U postgres -d issue_tracker < src/db/migrations/001_create_issues.sql",
    "db:seed": "docker exec -i issue-tracker-db psql -U postgres -d issue_tracker < src/db/seed.sql",
    "db:psql": "docker exec -it issue-tracker-db psql -U postgres -d issue_tracker"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
