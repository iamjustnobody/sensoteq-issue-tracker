{
  "name": "issue-tracker-backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:jest": "jest",
    "typecheck": "tsc --noEmit",
    "dev": "dotenv -e .env.local -- tsx watch src/index.ts",
    "build": "tsc && cp -r src/db dist",
    "build:cross-platform": "tsc && cpy 'src/db/**/*' dist --parents",
    "start": "dotenv -e .env.prod -- node dist/index.js",
    "start:prod": "node -r dotenv/config dist/index.js dotenv_config_path=.env.prod",
    "migrate:local": "dotenv -e .env.local -- tsx src/db/runMigrations.ts",
    "migrate:prod": "dotenv -e .env.prod -- tsx src/db/runMigrations.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "cpy-cli": "^6.0.0",
    "dotenv-cli": "^11.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
